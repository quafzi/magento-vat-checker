<config>
    <modules>
        <Quafzi_VatChecker>
            <version>0.2.0</version>
        </Quafzi_VatChecker>
    </modules>
    <global>
        <helpers>
            <quafzi_vatchecker>
                <class>Quafzi_VatChecker_Helper</class>
            </quafzi_vatchecker>
            <customer>
                <rewrite>
                    <data>Quafzi_VatChecker_Helper_Customer_Data</data>
                </rewrite>
            </customer>
            <core>
                <rewrite>
                    <data>Quafzi_VatChecker_Helper_Core_Data</data>
                </rewrite>
            </core>
        </helpers>
        <models>
            <quafzi_vatchecker>
                <class>Quafzi_VatChecker_Model</class>
            </quafzi_vatchecker>
        </models>
        <template>
            <email>
                <customer_vatchecker_error_email_template translate="label" module="quafzi_vatchecker">
                    <label>VAT check errors</label>
                    <file>vatcheck_errors.html</file>
                    <type>text</type>
                </customer_vatchecker_error_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Quafzi_VatChecker>
                    <files>
                        <default>Quafzi_VatChecker.csv</default>
                    </files>
                </Quafzi_VatChecker>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <check_vat_ids>
                <schedule>
                    <cron_expr>16 3 1 * *</cron_expr>
                </schedule>
                <run>
                    <model>quafzi_vatchecker/observer::checkCustomers</model>
                </run>
            </check_vat_ids>
        </jobs>
    </crontab>
</config>
